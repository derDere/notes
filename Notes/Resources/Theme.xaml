    </Viewbox>

    <Viewbox x:Key="PlainTextIco" x:Shared="false">
        <Image Source="/Resources/document_text.png" RenderOptions.BitmapScalingMode="NearestNeighbor" />
    </Viewbox>

    <Viewbox x:Key="MarkDownIco" x:Shared="false">
